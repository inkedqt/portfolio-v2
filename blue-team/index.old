// â”€â”€ RENDER â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€

function platformBadgeClass(p) {
  return 'badge-' + p.replace(/\s/g,'');
}

function diffClass(d) {
  return 'diff-' + d;
}

function renderCard(lab) {
  const artFallback = `background:linear-gradient(135deg,#0c0c18,#1a1a2e);display:flex;align-items:center;justify-content:center;`;
  const artEl = lab.art
    ? `<img src="${lab.art}" alt="${lab.name}" onerror="this.parentElement.style.cssText='${artFallback}';this.remove();">`
    : `<div style="${artFallback}width:100%;height:100%;"></div>`;

  const links = [];
  if (lab.writeup) links.push(`<a class="lab-link${lab.featured?' featured':''}" href="${lab.writeup}" target="${lab.writeup.startsWith('http')?'_blank':'_self'}">${lab.featured?'writeup':'writeup'}</a>`);
  if (lab.proof)   links.push(`<a class="lab-link" href="${lab.proof}" target="_blank">proof</a>`);

  return `
    <div class="lab-card"
         data-platform="${lab.platform}"
         data-diff="${lab.diff}"
         data-name="${lab.name.toLowerCase()}"
         data-cats="${lab.cats.join(' ').toLowerCase()}"
         data-summary="${lab.summary.toLowerCase()}">
      <div class="lab-art">
        ${artEl}
        <span class="lab-platform-badge ${platformBadgeClass(lab.platform)}">${lab.platform}</span>
        <span class="lab-diff-badge ${diffClass(lab.diff)}">${lab.diff}</span>
        <div class="lab-status-bar ${lab.status}"></div>
      </div>
      <div class="lab-body">
        <div class="lab-name">${lab.name}</div>
        <div class="lab-cats">${lab.cats.map(c=>`<span class="lab-cat">${c}</span>`).join('')}</div>
        <div class="lab-summary">${lab.summary}</div>
        <div class="lab-footer">
          <div class="lab-score">${lab.score?`score: <span>${lab.score}</span>`:''}</div>
          <div class="lab-links">${links.join('')}</div>
        </div>
      </div>
    </div>
  `;
}

function renderAll() {
  // skip featured from grid (it's shown above)
  const gridLabs = LABS.filter(l => !l.featured);
  document.getElementById('lab-grid').innerHTML = gridLabs.map(renderCard).join('');
  document.getElementById('stat-total').textContent = LABS.length;
  updateResultCount();
  renderPlatformCounts();
  updateBTL1Progress();
}

function renderPlatformCounts() {
  const counts = {};
  LABS.forEach(l => { counts[l.platform] = (counts[l.platform]||0)+1; });
  document.getElementById('platform-counts').innerHTML = Object.entries(counts).map(([p,n])=>`
    <div class="pcount">
      <span class="pcount-num">${n}</span>${p}
    </div>
  `).join('');
}

function updateBTL1Progress() {
  const btl1 = LABS.filter(l=>l.platform==='BTL1' && l.status==='done').length;
  const total = 9;
  const pct = Math.round(btl1/total*100);
  const fill = document.getElementById('btl1-fill');
  const done = document.getElementById('btl1-done');
  const pctEl = document.getElementById('btl1-pct');
  if(fill) fill.style.width = pct+'%';
  if(done) done.textContent = btl1;
  if(pctEl) pctEl.textContent = pct+'%';
}

// â”€â”€ FILTER â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€

let activePlatform = 'all';
let activeDiff     = null;

function applyFilter() {
  const query = (document.getElementById('lab-search').value||'').toLowerCase().trim();
  const cards = document.querySelectorAll('#lab-grid .lab-card');
  let visible = 0;
  cards.forEach(card => {
    const pMatch = activePlatform === 'all' || card.dataset.platform === activePlatform;
    const dMatch = !activeDiff || card.dataset.diff === activeDiff;
    const qMatch = !query ||
      card.dataset.name.includes(query) ||
      card.dataset.cats.includes(query) ||
      card.dataset.summary.includes(query);
    const show = pMatch && dMatch && qMatch;
    card.style.display = show ? '' : 'none';
    if (show) visible++;
  });
  document.getElementById('result-num').textContent = visible;
  document.getElementById('no-results').style.display = visible === 0 ? 'block' : 'none';
}

function updateResultCount() {
  const all = document.querySelectorAll('#lab-grid .lab-card').length;
  document.getElementById('result-num').textContent = all;
}

// platform buttons
document.querySelectorAll('.fbtn[data-platform]').forEach(btn => {
  btn.addEventListener('click', () => {
    document.querySelectorAll('.fbtn[data-platform]').forEach(b=>b.classList.remove('active'));
    btn.classList.add('active');
    activePlatform = btn.dataset.platform;
    applyFilter();
  });
});

// diff buttons
document.querySelectorAll('.fbtn[data-diff]').forEach(btn => {
  btn.addEventListener('click', () => {
    const wasActive = btn.classList.contains('active');
    document.querySelectorAll('.fbtn[data-diff]').forEach(b=>b.classList.remove('active'));
    if (!wasActive) { btn.classList.add('active'); activeDiff = btn.dataset.diff; }
    else activeDiff = null;
    applyFilter();
  });
});

// search
document.getElementById('lab-search').addEventListener('input', applyFilter);

// â”€â”€ INIT â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
renderAll();
</script>

